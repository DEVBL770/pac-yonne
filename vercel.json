{
  "version": 2,
  "framework": "vite",
  "rootDirectory": ".",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/send.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/send$", "dest": "api/send.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}